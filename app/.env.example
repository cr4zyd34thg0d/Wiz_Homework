# Environment Configuration for Wiz Todo App
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration (will be set by Kubernetes)
MONGODB_URI=mongodb://username:password@mongodb-host:27017/todoapp
MONGODB_DATABASE=todoapp

# Application Configuration
APP_NAME=wiz-todo-app
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Security (for production)
SESSION_SECRET=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
# AWS Configuration
AWS_REGION=us-west-2
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# Project Configuration
PROJECT_NAME=k8s-vulnerable-db
ENVIRONMENT=dev
OWNER=your-name

# EKS Cluster Configuration
CLUSTER_NAME=vulnerable-db-cluster
CLUSTER_VERSION=1.28
NODE_GROUP_INSTANCE_TYPE=t3.medium
NODE_GROUP_MIN_SIZE=1
NODE_GROUP_MAX_SIZE=3
NODE_GROUP_DESIRED_SIZE=2

# EC2 Instance Configuration (Vulnerable DB)
DB_INSTANCE_TYPE=t3.small
DB_AMI_ID=ami-0c02fb55956c7d316  # Amazon Linux 2
DB_KEY_PAIR_NAME=your-key-pair

# Database Configuration
DB_ROOT_PASSWORD=VulnerablePassword123!
DB_NAME=dvwa
DB_USER=dvwa_user
DB_PASSWORD=dvwa_password

# Network Configuration
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_CIDRS=["10.0.1.0/24", "10.0.2.0/24"]
PRIVATE_SUBNET_CIDRS=["10.0.10.0/24", "10.0.20.0/24"]

# Application Configuration
APP_NAME=db-connector
APP_IMAGE=nginx:latest
APP_PORT=80
APP_REPLICAS=2

# Monitoring Configuration
ENABLE_MONITORING=true
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION=15d

# Security Configuration
ENABLE_SECURITY_SCANNING=true
ALLOWED_CIDR_BLOCKS=["0.0.0.0/0"]  # Restrict this in production!

# CI/CD Configuration
GITHUB_REPO=your-username/k8s-vulnerable-db-project
DOCKER_REGISTRY=your-account.dkr.ecr.us-west-2.amazonaws.com

# Terraform Backend (Optional - for state management)
TF_STATE_BUCKET=your-terraform-state-bucket
TF_STATE_KEY=k8s-vulnerable-db/terraform.tfstate
TF_STATE_REGION=us-west-2
TF_DYNAMODB_TABLE=terraform-state-lock